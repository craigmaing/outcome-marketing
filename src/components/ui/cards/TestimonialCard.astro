---
// Testimonial Card Component for Outcome Digital Marketing Design System
export interface Props {
  quote: string;
  author: string;
  role?: string;
  company?: string;
  avatar?: string;
  rating?: number;
  variant?: 'default' | 'featured';
  class?: string;
  id?: string;
}

const {
  quote,
  author,
  role,
  company,
  avatar,
  rating = 5,
  variant = 'default',
  class: className = '',
  id,
} = Astro.props;

// Generate base classes
const baseClasses = 'rounded-lg p-6 transition-all duration-200';

// Variant classes
const variantClasses = {
  default: 'bg-gray-50 border border-gray-200',
  featured: 'bg-primary text-white border-0'
};

// Text color classes based on variant
const textClasses = {
  default: 'text-gray-900',
  featured: 'text-white'
};

// Subtext color classes based on variant
const subtextClasses = {
  default: 'text-gray-600',
  featured: 'text-primary-light'
};

// Combine all classes
const cardClasses = `${baseClasses} ${variantClasses[variant]} ${className}`.trim();

// Generate unique ID if not provided
const cardId = id || `testimonial-card-${Math.random().toString(36).substr(2, 9)}`;

// Generate star rating
const renderStars = (count: number) => {
  return Array.from({ length: 5 }, (_, i) => (
    i < count 
      ? '<svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>'
      : '<svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>'
  )).join('');
};
---

<div class={cardClasses} id={cardId}>
  <!-- Quote Icon -->
  <div class={`mb-4 ${variant === 'featured' ? 'text-primary-light' : 'text-primary'}`}>
    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
  </div>
  
  <!-- Rating -->
  {rating > 0 && (
    <div class="flex mb-4" aria-label={`Rating: ${rating} out of 5 stars`}>
      <Fragment set:html={renderStars(rating)} />
    </div>
  )}
  
  <!-- Quote -->
  <blockquote class={`font-secondary italic text-lg mb-6 ${textClasses[variant]}`}>
    "{quote}"
  </blockquote>
  
  <!-- Author -->
  <div class="flex items-center">
    {avatar ? (
      <img 
        src={avatar} 
        alt={`${author} - ${role || ''}`} 
        class="w-12 h-12 rounded-full mr-4 object-cover"
      />
    ) : (
      <div class={`w-12 h-12 rounded-full mr-4 flex items-center justify-center ${variant === 'featured' ? 'bg-primary-dark' : 'bg-primary'} text-white font-semibold text-lg`}>
        {author.charAt(0).toUpperCase()}
      </div>
    )}
    
    <div>
      <cite class={`font-semibold not-italic ${textClasses[variant]}`}>{author}</cite>
      {(role || company) && (
        <div class={`text-sm ${subtextClasses[variant]}`}>
          {role && <span>{role}</span>}
          {role && company && <span>, </span>}
          {company && <span>{company}</span>}
        </div>
      )}
    </div>
  </div>
</div>