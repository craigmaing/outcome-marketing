---
// Icon Button Component for Outcome Digital Marketing Design System
export interface Props {
  variant?: 'primary' | 'secondary' | 'tertiary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
  loading?: boolean;
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  onClick?: string;
  ariaLabel: string;
  id?: string;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  loading = false,
  href,
  type = 'button',
  class: className = '',
  onClick,
  ariaLabel,
  id,
} = Astro.props;

// Generate base classes
const baseClasses = 'inline-flex items-center justify-center rounded-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Size classes
const sizeClasses = {
  sm: 'p-2',
  md: 'p-3',
  lg: 'p-4'
};

// Icon size classes
const iconSizeClasses = {
  sm: 'h-4 w-4',
  md: 'h-5 w-5',
  lg: 'h-6 w-6'
};

// Variant classes
const variantClasses = {
  primary: 'bg-primary-blue text-white hover:bg-primary-blue-hover focus:ring-primary-blue',
  secondary: 'bg-transparent text-primary-blue border-2 border-primary-blue hover:bg-primary-blue hover:text-white focus:ring-primary-blue',
  tertiary: 'bg-transparent text-primary-blue hover:bg-primary-blue hover:bg-opacity-10 focus:ring-primary-blue',
  ghost: 'bg-transparent text-primary-blue hover:bg-neutral-100 focus:ring-primary-blue'
};

// Combine all classes
const buttonClasses = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${className}`.trim();

// Generate unique ID if not provided
const buttonId = id || `icon-btn-${Math.random().toString(36).substr(2, 9)}`;
---

{href ? (
  <a 
    href={href} 
    class={buttonClasses}
    aria-label={ariaLabel}
    id={buttonId}
    role="button"
    tabindex={disabled ? '-1' : undefined}
    aria-disabled={disabled ? 'true' : undefined}
  >
    {loading ? (
      <svg class={`animate-spin ${iconSizeClasses[size]}`} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    ) : (
      <slot />
    )}
  </a>
) : (
  <button 
    type={type}
    class={buttonClasses}
    disabled={disabled || loading}
    aria-label={ariaLabel}
    id={buttonId}
    {...(onClick && { 'onclick': onClick })}
  >
    {loading ? (
      <svg class={`animate-spin ${iconSizeClasses[size]}`} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    ) : (
      <slot />
    )}
  </button>
)}