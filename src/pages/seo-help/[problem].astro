---
import Layout from '../../layouts/Layout.astro';
import { seoProblems, seoServices } from '../../data/seo-data';

interface ProblemData {
  name: string;
  slug: string;
  description: string;
  impact: string;
  symptoms: string[];
  diagnosticSteps: string[];
  solutions: string[];
  timeline?: string;
  costEstimate?: string;
  preventionTips: string[];
  relatedServices: string[];
}

export async function getStaticPaths() {
  return seoProblems.map((problem: ProblemData) => ({
    params: { problem: problem.slug },
    props: { problem }
  }));
}

const { problem } = Astro.props;

// Generate dynamic meta tags
const title = `Fix ${problem.name} | Expert SEO Solutions | Outcome Digital Marketing`;
const description = `Professional solutions for ${problem.name.toLowerCase()}. ${problem.description}. Expert diagnostic and remediation services with proven results.`;
const canonicalUrl = `https://outcomarketing.co.uk/seo-help/${problem.slug}`;

// Generate structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `${problem.name} Solutions`,
  "description": description,
  "provider": {
    "@type": "Organization",
    "name": "Outcome Digital Marketing Ltd",
    "url": "https://outcomarketing.co.uk"
  },
  "serviceType": "SEO Consulting",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "SEO Services",
    "itemListElement": problem.relatedServices.map((service: string) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service
      }
    }))
  }
};
---

<Layout title={title} description={description} url={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <main class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-blue-600 hover:text-blue-800">Home</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li><a href="/services" class="text-blue-600 hover:text-blue-800">Services</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-600">{problem.name}</li>
      </ol>
    </nav>

    <!-- Hero Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-red-600 to-orange-600 text-white rounded-lg p-8">
        <h1 class="text-4xl font-bold mb-4">Fix {problem.name}</h1>
        <p class="text-xl mb-6">{problem.description}</p>
        <div class="grid md:grid-cols-3 gap-4 mb-6">
          <div class="bg-white/20 rounded-lg p-4">
            <h3 class="font-semibold mb-2">Timeline</h3>
            <p class="text-2xl font-bold">{problem.timeline}</p>
          </div>
          <div class="bg-white/20 rounded-lg p-4">
            <h3 class="font-semibold mb-2">Investment</h3>
            <p class="text-2xl font-bold">{problem.costEstimate}</p>
          </div>
          <div class="bg-white/20 rounded-lg p-4">
            <h3 class="font-semibold mb-2">Success Rate</h3>
            <p class="text-2xl font-bold">95%+</p>
          </div>
        </div>
        <a href="/contact" class="bg-white text-red-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block">
          Get Free Diagnosis
        </a>
      </div>
    </section>

    <!-- Problem Overview -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Understanding {problem.name}</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold mb-4">Problem Description</h3>
          <p class="text-gray-700 mb-6">{problem.description}</p>
          
          <h3 class="text-xl font-semibold mb-4">Business Impact</h3>
          <div class="bg-red-50 rounded-lg p-6">
            <p class="text-gray-700">{problem.impact}</p>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-4">Common Symptoms</h3>
          <div class="space-y-3">
            {problem.symptoms.map((symptom: string) => (
              <div class="flex items-start">
                <svg class="w-6 h-6 text-red-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">{symptom}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Diagnostic Process -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Our Diagnostic Process</h2>
      <div class="bg-gray-50 rounded-lg p-6">
        <div class="grid md:grid-cols-2 gap-6">
          {problem.diagnosticSteps.map((step: string, index: number) => (
            <div class="flex items-start">
              <div class="bg-blue-100 rounded-full p-2 mr-4 flex-shrink-0">
                <span class="text-blue-600 font-bold">{index + 1}</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2">{step}</h3>
                <p class="text-gray-700">Our comprehensive approach to {step.toLowerCase()} ensures we identify all root causes of {problem.name.toLowerCase()}.</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Solution Strategies -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Our Solution Strategies</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {problem.solutions.map((solution: string, index: number) => (
          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <div class="flex items-start mb-4">
              <div class="bg-green-100 rounded-full p-2 mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2">{solution}</h3>
                <p class="text-gray-700">Our expert team implements {solution.toLowerCase()} with proven methodologies and best practices.</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Timeline and Expectations -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Timeline and Expectations</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold mb-4">Project Timeline</h3>
          <div class="bg-blue-50 rounded-lg p-6">
            <p class="text-2xl font-bold text-blue-600 mb-4">{problem.timeline}</p>
            <p class="text-gray-700">Typical timeline to see significant improvement in {problem.name.toLowerCase()} with our expert implementation.</p>
          </div>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-4">Investment Overview</h3>
          <div class="bg-green-50 rounded-lg p-6">
            <p class="text-2xl font-bold text-green-600 mb-4">{problem.costEstimate}</p>
            <p class="text-gray-700">Typical investment range for comprehensive {problem.name.toLowerCase()} solutions based on complexity and scope.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Prevention Tips -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Prevention Tips</h2>
      <div class="bg-yellow-50 rounded-lg p-6">
        <div class="grid md:grid-cols-2 gap-6">
          {problem.preventionTips.map((tip: string, index: number) => (
            <div class="flex items-start">
              <svg class="w-6 h-6 text-yellow-600 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 8 8 0 016 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v2a1 1 0 001 1h1a1 1 0 001-1z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-700">{tip}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Related Services -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Recommended Services for {problem.name}</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoServices.filter((service: any) => problem.relatedServices.includes(service.name)).map((service: any) => (
          <div class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-2">{service.name}</h3>
            <p class="text-gray-700 mb-4">{service.description}</p>
            <a href={`/contact?service=${service.slug}&problem=${problem.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
              Learn more â†’
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Why Choose Outcome Digital Marketing for {problem.name}</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="bg-red-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 012.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Expert Diagnosis</h3>
          <p class="text-gray-700">Comprehensive analysis to identify root causes of {problem.name.toLowerCase()}</p>
        </div>
        <div class="text-center">
          <div class="bg-green-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 1 1 0 000 2H6a2 2 0 100 4h2a2 2 0 100 4h2a1 1 0 100 2 2 2 0 01-2 2H6a2 2 0 01-2-2V5z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Proven Solutions</h3>
          <p class="text-gray-700">Track record of successfully resolving {problem.name.toLowerCase()} for diverse businesses</p>
        </div>
        <div class="text-center">
          <div class="bg-blue-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.293a1 1 0 00-1.414 0L10 10.586 8.707 9.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 11.414l1.293 1.293a1 1 0 001.414 0l4-4a1 1 0 000-1.414z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Long-term Support</h3>
          <p class="text-gray-700">Ongoing monitoring and prevention strategies to maintain results</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-red-600 to-orange-600 text-white rounded-lg p-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Fix {problem.name}?</h2>
        <p class="text-xl mb-6">Get expert diagnosis and solutions for {problem.name.toLowerCase()} with guaranteed results</p>
        <div class="flex justify-center space-x-4">
          <a href="/contact" class="bg-white text-red-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Get Free Diagnosis
          </a>
          <a href="/services" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-red-600 transition-colors">
            View All Services
          </a>
        </div>
      </div>
    </section>

    <!-- Related Problems -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Related SEO Problems</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoProblems.filter((p: any) => p.slug !== problem.slug).slice(0, 3).map((relatedProblem: any) => (
          <div class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-2">{relatedProblem.name}</h3>
            <p class="text-gray-700 mb-4">{relatedProblem.description}</p>
            <a href={`/seo-help/${relatedProblem.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
              Learn more â†’
            </a>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>