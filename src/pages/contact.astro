---
import PageLayout from '../layouts/PageLayout.astro';

const pageTitle = "Contact Us - Get Your Free SEO Audit | Outcome Digital Marketing Ltd";
const pageDescription = "Get in touch with Outcome Digital Marketing Ltd. Request your free comprehensive SEO audit and discover how we can transform your website into a powerful ranking asset.";
---

<PageLayout title={pageTitle} description={pageDescription} currentPath="/contact">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-900 to-gray-800 text-white py-24 overflow-hidden">
    <!-- Decorative gradient overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
    </div>

    <div class="relative container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="!text-white text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Let's Transform Your Website
        </h1>
        <p class="!text-gray-300 text-xl md:text-2xl mb-10 leading-relaxed">
          Ready to turn your underperforming website into a powerful ranking asset? Get in touch to start your transformation journey.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="#contact-form"
            class="inline-flex items-center gap-2 px-8 py-4 bg-accent text-white font-semibold rounded-xl hover:bg-accent-dark transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
          >
            <span>Get Your Free Audit</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form and Info Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information (Left Column) -->
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Get in Touch
          </h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Prefer to speak directly? Here's how you can reach us. We'll respond within 24 hours.
          </p>

          <div class="space-y-6 mb-12">
            <!-- Email Card -->
            <div class="group bg-white border border-gray-200 rounded-xl p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center transition-all duration-300 group-hover:scale-110 shadow-sm group-hover:shadow-md">
                    <svg class="w-7 h-7 text-primary transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors duration-300">Email</h3>
                  <a href="mailto:hello@outcome.digital" class="text-gray-600 hover:text-primary transition-colors block mb-1">
                    hello@outcome.digital
                  </a>
                  <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
                </div>
              </div>
            </div>

            <!-- Phone Card -->
            <div class="group bg-white border border-gray-200 rounded-xl p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="w-14 h-14 bg-accent/10 rounded-2xl flex items-center justify-center transition-all duration-300 group-hover:scale-110 shadow-sm group-hover:shadow-md">
                    <svg class="w-7 h-7 text-accent transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-accent transition-colors duration-300">Phone</h3>
                  <a href="tel:+441234567890" class="text-gray-600 hover:text-accent transition-colors block mb-1">
                    +44 123 456 7890
                  </a>
                  <p class="text-sm text-gray-500">Monday - Friday, 9am - 5pm GMT</p>
                </div>
              </div>
            </div>

            <!-- Location Card -->
            <div class="group bg-white border border-gray-200 rounded-xl p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0">
                  <div class="w-14 h-14 bg-primary/10 rounded-2xl flex items-center justify-center transition-all duration-300 group-hover:scale-110 shadow-sm group-hover:shadow-md">
                    <svg class="w-7 h-7 text-primary transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors duration-300">Location</h3>
                  <p class="text-gray-600 mb-1">London, United Kingdom</p>
                  <p class="text-sm text-gray-500">Serving clients nationwide</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Why Choose Us -->
          <div class="bg-white border border-gray-200 rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Why Choose Outcome Marketing?</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0">
                  <div class="w-6 h-6 bg-primary/10 rounded-full flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <span class="text-gray-600">Free comprehensive SEO audit with actionable recommendations</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0">
                  <div class="w-6 h-6 bg-primary/10 rounded-full flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <span class="text-gray-600">No obligation consultation to understand your goals</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0">
                  <div class="w-6 h-6 bg-primary/10 rounded-full flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <span class="text-gray-600">Transparent pricing and clearly defined processes</span>
              </li>
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0">
                  <div class="w-6 h-6 bg-primary/10 rounded-full flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <span class="text-gray-600">Results-focused approach with measurable outcomes</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Contact Form (Right Column) -->
        <div id="contact-form">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Get Your Free SEO Audit
          </h2>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Fill out the form below and we'll provide a comprehensive SEO audit of your website, completely free of charge.
          </p>

          <form class="space-y-6" method="POST" action="/api/contact">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-semibold text-gray-900 mb-2">
                  First Name <span class="text-accent">*</span>
                </label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  placeholder="John"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                />
              </div>
              <div>
                <label for="last-name" class="block text-sm font-semibold text-gray-900 mb-2">
                  Last Name <span class="text-accent">*</span>
                </label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  placeholder="Doe"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
                Email Address <span class="text-accent">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="john@example.com"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-900 mb-2">
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder="+44 20 1234 5678"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-semibold text-gray-900 mb-2">
                Company Name <span class="text-accent">*</span>
              </label>
              <input
                type="text"
                id="company"
                name="company"
                placeholder="Your Company Ltd"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
              />
            </div>

            <div>
              <label for="website" class="block text-sm font-semibold text-gray-900 mb-2">
                Website URL <span class="text-accent">*</span>
              </label>
              <input
                type="url"
                id="website"
                name="website"
                placeholder="https://www.example.com"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
              />
            </div>

            <div>
              <label for="service-interest" class="block text-sm font-semibold text-gray-900 mb-2">
                Service Interest <span class="text-accent">*</span>
              </label>
              <select
                id="service-interest"
                name="service-interest"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 bg-white"
              >
                <option value="">Select a service</option>
                <option value="seo-audit">Free SEO Audit</option>
                <option value="content-creation">Content Creation</option>
                <option value="technical-seo">Technical SEO</option>
                <option value="local-seo">Local SEO</option>
                <option value="comprehensive-seo">Comprehensive SEO Strategy</option>
                <option value="not-sure">Not Sure - Need Guidance</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
                Tell us about your challenges
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                placeholder="What are your main SEO challenges or goals?"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 resize-none"
              ></textarea>
            </div>

            <div class="flex items-start">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="w-5 h-5 mt-0.5 text-primary border-gray-300 rounded focus:ring-2 focus:ring-primary cursor-pointer"
              />
              <label for="consent" class="ml-3 text-sm text-gray-600">
                I agree to be contacted by Outcome Digital Marketing Ltd and understand my data will be handled in accordance with the <a href="/privacy-policy" class="text-primary hover:underline">privacy policy</a>.
              </label>
            </div>

            <button
              type="submit"
              class="w-full inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent text-white font-semibold rounded-xl hover:bg-accent-dark transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
            >
              <span>Get My Free SEO Audit</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="py-20 bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          What to Expect After Contacting Us
        </h2>
        <p class="text-xl text-gray-600 leading-relaxed">
          We believe in prompt, professional communication throughout our partnership
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Step 1 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-gray-300">
          <div class="text-center">
            <div class="w-20 h-20 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 shadow-sm group-hover:shadow-md">
              <span class="text-primary font-bold text-2xl">24h</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300">Initial Response</h3>
            <p class="text-gray-600 leading-relaxed">
              We'll respond to your inquiry within 24 hours to schedule your free consultation.
            </p>
          </div>
        </div>

        <!-- Step 2 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-gray-300">
          <div class="text-center">
            <div class="w-20 h-20 bg-accent/10 rounded-2xl flex items-center justify-center mx-auto mb-6 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 shadow-sm group-hover:shadow-md">
              <span class="text-accent font-bold text-2xl">48h</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-accent transition-colors duration-300">Free Audit Delivery</h3>
            <p class="text-gray-600 leading-relaxed">
              Receive your comprehensive SEO audit with actionable recommendations within 48 hours.
            </p>
          </div>
        </div>

        <!-- Step 3 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-gray-300">
          <div class="text-center">
            <div class="w-20 h-20 bg-primary/10 rounded-2xl flex items-center justify-center mx-auto mb-6 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 shadow-sm group-hover:shadow-md">
              <span class="text-primary font-bold text-2xl">1wk</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300">Strategy Proposal</h3>
            <p class="text-gray-600 leading-relaxed">
              Get a customized SEO strategy proposal tailored to your business goals and budget.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Frequently Asked Questions
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Common questions about our SEO services
        </p>
      </div>

      <div class="max-w-3xl mx-auto space-y-6">
        <!-- FAQ 1 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
          <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300">
            How long does it take to see SEO results?
          </h3>
          <p class="text-gray-600 leading-relaxed">
            SEO is a long-term strategy, but most clients start seeing improvements in 3-6 months. Significant results typically appear within 6-12 months, depending on your industry competition and current website status.
          </p>
        </div>

        <!-- FAQ 2 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
          <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300">
            What's included in the free SEO audit?
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Our free SEO audit includes a comprehensive analysis of your website's technical SEO, content quality, backlink profile, and competitor analysis. We provide actionable recommendations to improve your search rankings.
          </p>
        </div>

        <!-- FAQ 3 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
          <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300">
            Do you work with businesses of all sizes?
          </h3>
          <p class="text-gray-600 leading-relaxed">
            Yes, we work with businesses of all sizes, from small local businesses to larger enterprises. We customize our approach based on your specific needs, budget, and goals.
          </p>
        </div>

        <!-- FAQ 4 -->
        <div class="group bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
          <h3 class="text-lg font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300">
            What makes you different from other SEO agencies?
          </h3>
          <p class="text-gray-600 leading-relaxed">
            We focus on measurable outcomes rather than just activities. We provide transparent reporting, work as partners with our clients, and specialize in transforming underperforming websites into ranking assets.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-20 bg-gradient-to-br from-gray-900 via-gray-900 to-gray-800 text-white overflow-hidden">
    <!-- Decorative gradient overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
    </div>

    <div class="relative container text-center">
      <h2 class="!text-white text-3xl md:text-5xl font-bold mb-6">
        Ready to Transform Your Website's Performance?
      </h2>
      <p class="!text-gray-300 text-xl mb-10 max-w-3xl mx-auto leading-relaxed">
        Take the first step towards better search rankings and increased organic traffic.
      </p>
      <a
        href="#contact-form"
        class="inline-flex items-center gap-3 px-8 py-4 bg-accent text-white font-semibold rounded-xl hover:bg-accent-dark transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
      >
        <span>Get Your Free SEO Audit</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
</PageLayout>

<script>
  // Smooth scroll to contact form
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const href = (anchor as HTMLAnchorElement).getAttribute('href');
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      }
    });
  });

  // Form submission handling
  const form = document.querySelector('form[action="/api/contact"]') as HTMLFormElement;

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalButtonText = submitButton.textContent;

      // Disable button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Sending...';

      try {
        const formData = new FormData(form);
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();

        if (result.success) {
          // Success message
          form.innerHTML = `
            <div class="bg-green-50 border-2 border-green-500 rounded-lg p-8 text-center">
              <svg class="w-16 h-16 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="text-2xl font-bold text-green-800 mb-2">Thank You!</h3>
              <p class="text-green-700 text-lg">
                ${result.message || 'Your message has been sent successfully. We\'ll be in touch within 24 hours.'}
              </p>
            </div>
          `;
        } else {
          // Error message
          const errorDiv = document.createElement('div');
          errorDiv.className = 'bg-red-50 border-2 border-red-500 rounded-lg p-6 mb-6';
          errorDiv.innerHTML = `
            <div class="flex items-start">
              <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h4 class="text-red-800 font-semibold mb-1">Error Submitting Form</h4>
                <p class="text-red-700">${result.message || 'Please check your entries and try again.'}</p>
                ${result.errors ? `<ul class="mt-2 list-disc list-inside text-red-600">${result.errors.map((err: string) => `<li>${err}</li>`).join('')}</ul>` : ''}
              </div>
            </div>
          `;

          // Insert error at top of form
          form.insertBefore(errorDiv, form.firstChild);

          // Scroll to error
          errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });

          // Re-enable button
          submitButton.disabled = false;
          submitButton.textContent = originalButtonText;
        }
      } catch (error) {
        // Network or unexpected error
        const errorDiv = document.createElement('div');
        errorDiv.className = 'bg-red-50 border-2 border-red-500 rounded-lg p-6 mb-6';
        errorDiv.innerHTML = `
          <div class="flex items-start">
            <svg class="w-6 h-6 text-red-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="text-red-800 font-semibold mb-1">Connection Error</h4>
              <p class="text-red-700">Unable to submit form. Please check your internet connection and try again, or contact us directly at hello@outcome.digital</p>
            </div>
          </div>
        `;

        form.insertBefore(errorDiv, form.firstChild);
        errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });

        // Re-enable button
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
      }
    });
  }
