---
import Layout from '../../layouts/Layout.astro';
import { seoServices, seoLocations } from '../../data/seo-data';

export async function getStaticPaths() {
  return seoServices.map(service => ({
    params: { service: service.slug },
    props: { service }
  }));
}

const { service } = Astro.props;

// Generate dynamic meta tags
const title = `${service.name} Services | Expert SEO Solutions | Outcome Digital Marketing`;
const description = `Professional ${service.name.toLowerCase()} services with proven results. ${service.description}. Get a free consultation today.`;
const canonicalUrl = `https://outcomarketing.co.uk/seo-services/${service.slug}`;

// Generate structured data (NO pricing)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": service.name,
  "description": service.description,
  "provider": {
    "@type": "Organization",
    "name": "Outcome Digital Marketing Ltd",
    "url": "https://outcomarketing.co.uk"
  },
  "serviceType": service.name
};
---

<Layout title={title} description={description} url={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <main class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-blue-600 hover:text-blue-800">Home</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li><a href="/services" class="text-blue-600 hover:text-blue-800">Services</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-600">{service.name}</li>
      </ol>
    </nav>

    <!-- Hero Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg p-8">
        <h1 class="text-4xl font-bold mb-4">{service.name} Services</h1>
        <p class="text-xl mb-6">{service.description}</p>
        <a href="/contact" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block">
          Get Free Consultation
        </a>
      </div>
    </section>

    <!-- Service Benefits -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Benefits of Our {service.name}</h2>
      <div class="bg-gray-50 rounded-lg p-6">
        <ul class="space-y-3">
          {service.benefits.map(item => (
            <li class="flex items-center">
              <svg class="w-6 h-6 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-700">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- Available Locations -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Available Locations for {service.name}</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoLocations.map(location => (
          <div class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-2">{location.city}, {location.region}</h3>
            <p class="text-gray-700 mb-4">{location.economicNote}</p>
            <div class="text-sm text-gray-600 mb-4">
              <p>Population: {location.population}</p>
              <p>Business Density: {location.businessDensity}</p>
            </div>
            <a href={`/seo-services/${service.slug}/${location.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
              View {location.city} details →
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Why Choose Our {service.name}</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="bg-blue-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Expert Team</h3>
          <p class="text-gray-700">Certified SEO specialists with proven track record</p>
        </div>
        <div class="text-center">
          <div class="bg-green-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 1 1 0 000 2H6a2 2 0 100 4h2a2 2 0 100 4h2a1 1 0 100 2 2 2 0 01-2 2H6a2 2 0 01-2-2V5z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Proven Results</h3>
          <p class="text-gray-700">300%+ average ROI for our clients</p>
        </div>
        <div class="text-center">
          <div class="bg-purple-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.293a1 1 0 00-1.414 0L10 10.586 8.707 9.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 11.414l1.293 1.293a1 1 0 001.414 0l4-4a1 1 0 000-1.414z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Custom Strategy</h3>
          <p class="text-gray-700">Tailored approach for your business needs</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg p-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Start {service.name}?</h2>
        <p class="text-xl mb-6">Get expert {service.name.toLowerCase()} services with guaranteed results</p>
        <div class="flex justify-center space-x-4">
          <a href="/contact" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Get Free Consultation
          </a>
          <a href="/services" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
            View All Services
          </a>
        </div>
      </div>
    </section>

    <!-- Related Services -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Related Services</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoServices.filter(s => s.slug !== service.slug).slice(0, 3).map(relatedService => (
          <div class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-2">{relatedService.name}</h3>
            <p class="text-gray-700 mb-4">{relatedService.description}</p>
            <a href={`/seo-services/${relatedService.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
              Learn more →
            </a>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>