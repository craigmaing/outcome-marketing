---
import { getCollection } from 'astro:content';
import PageLayout from '../../layouts/PageLayout.astro';
import Card from '../../components/ui/cards/Card.astro';
import Button from '../../components/ui/buttons/Button.astro';

const pageTitle = "SEO Insights & Strategies | Outcome Digital Marketing Blog";
const pageDescription = "Expert SEO advice, strategies, and insights from Outcome Digital Marketing. Learn how to improve your search rankings and drive organic traffic.";

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Group posts by category
const categories = [...new Set(sortedPosts.map(post => post.data.category))];

// Get featured posts
const featuredPosts = sortedPosts.filter(post => post.data.featured);
---

<PageLayout title={pageTitle} description={pageDescription} currentPath="/blog">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 via-gray-900 to-gray-800 text-white py-24 overflow-hidden">
    <!-- Decorative gradient overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
    </div>

    <div class="relative container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="!text-white text-4xl md:text-6xl font-bold mb-6">
          SEO Insights & Strategies
        </h1>
        <p class="!text-gray-300 text-xl md:text-2xl mb-8 leading-relaxed">
          Expert advice on SEO, content marketing, and digital strategy. Learn proven tactics that deliver real results.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section class="py-20 bg-gray-50">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12">Featured Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredPosts.slice(0, 3).map((post) => (
            <article class="group bg-white border border-gray-200 rounded-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 hover:border-gray-300 h-full flex flex-col">
              {post.data.image && (
                <div class="relative overflow-hidden">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-gray-900/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              )}
              <div class="p-8 flex-1 flex flex-col">
                <div class="mb-4">
                  <span class="inline-block bg-primary/10 text-primary text-xs font-semibold px-4 py-2 rounded-full">
                    {post.data.category}
                  </span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-primary transition-colors duration-300 leading-tight">
                  <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-6 flex-1 leading-relaxed">{post.data.description}</p>
                <div class="flex items-center justify-between text-sm text-gray-500 mb-6 pb-6 border-b border-gray-100">
                  <span class="font-medium">{post.data.author}</span>
                  {post.data.readingTime && (
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span>{post.data.readingTime} min read</span>
                    </div>
                  )}
                </div>
                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center gap-2 text-primary font-semibold hover:text-primary-dark transition-all duration-200 group/link"
                >
                  <span>Read Article</span>
                  <svg
                    class="w-5 h-5 transition-transform duration-200 group-hover/link:translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Blog Posts -->
  <section class="py-20 bg-white">
    <div class="container">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Main Content -->
        <div class="lg:w-2/3">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-12">Latest Articles</h2>
          <div class="space-y-10">
            {sortedPosts.map((post) => (
              <article class="group bg-white border border-gray-200 rounded-xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 hover:border-gray-300">
                <div class="flex flex-col md:flex-row">
                  {post.data.image && (
                    <div class="md:w-2/5 relative overflow-hidden">
                      <img
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-64 md:h-full object-cover transition-transform duration-500 group-hover:scale-110"
                      />
                      <div class="absolute inset-0 bg-gradient-to-t from-gray-900/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                  )}
                  <div class={`p-8 ${post.data.image ? "md:w-3/5" : "w-full"} flex flex-col`}>
                    <div class="mb-4">
                      <span class="inline-block bg-primary/10 text-primary text-xs font-semibold px-4 py-2 rounded-full">
                        {post.data.category}
                      </span>
                    </div>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4 group-hover:text-primary transition-colors duration-300 leading-tight">
                      <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                        {post.data.title}
                      </a>
                    </h3>
                    <p class="text-gray-600 mb-6 leading-relaxed flex-1">{post.data.description}</p>
                    <div class="flex items-center gap-6 text-sm text-gray-500 mb-6 pb-6 border-b border-gray-100 flex-wrap">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="font-medium">{post.data.author}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>{post.data.publishDate.toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
                      </div>
                      {post.data.readingTime && (
                        <div class="flex items-center gap-2">
                          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          <span>{post.data.readingTime} min read</span>
                        </div>
                      )}
                    </div>
                    <a
                      href={`/blog/${post.slug}`}
                      class="inline-flex items-center gap-2 text-primary font-semibold hover:text-primary-dark transition-all duration-200 group/link self-start"
                    >
                      <span>Read Full Article</span>
                      <svg
                        class="w-5 h-5 transition-transform duration-200 group-hover/link:translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="lg:w-1/3 space-y-8">
          <!-- Categories -->
          <div class="bg-white border border-gray-200 rounded-xl p-8 transition-all duration-300 hover:shadow-lg">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Categories</h3>
            <div class="space-y-3">
              {categories.map((category) => {
                const count = sortedPosts.filter(post => post.data.category === category).length;
                return (
                  <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0 group cursor-pointer">
                    <span class="text-gray-700 font-medium group-hover:text-primary transition-colors">{category}</span>
                    <span class="bg-primary/10 text-primary text-xs font-semibold px-3 py-1 rounded-full">{count}</span>
                  </div>
                );
              })}
            </div>
          </div>

          <!-- Newsletter Signup -->
          <div class="relative bg-gradient-to-br from-primary to-primary-dark text-white rounded-xl p-8 overflow-hidden shadow-lg">
            <!-- Decorative elements -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
            <div class="absolute bottom-0 left-0 w-24 h-24 bg-accent/20 rounded-full blur-xl"></div>

            <div class="relative">
              <h3 class="!text-white text-xl font-bold mb-3">Get SEO Tips in Your Inbox</h3>
              <p class="!text-gray-100 mb-6 text-sm leading-relaxed">Subscribe to receive our latest SEO insights and strategies every week.</p>
              <form class="space-y-3">
                <input
                  type="email"
                  placeholder="Your email address"
                  class="w-full px-4 py-3 rounded-lg border-0 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 transition-all"
                  required
                />
                <button
                  type="submit"
                  class="w-full px-6 py-3 bg-white text-primary font-semibold rounded-lg hover:bg-gray-50 transition-all duration-200 shadow-md hover:shadow-lg"
                >
                  Subscribe Now
                </button>
              </form>
              <p class="!text-gray-200 text-xs mt-3">No spam. Unsubscribe anytime.</p>
            </div>
          </div>

          <!-- CTA -->
          <div class="bg-gray-50 border-2 border-primary/20 rounded-xl p-8 transition-all duration-300 hover:shadow-lg hover:border-primary/40">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Need SEO Help?</h3>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Get a free SEO audit and discover opportunities to improve your rankings and drive more organic traffic.
            </p>
            <a
              href="/contact"
              class="block w-full text-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-all duration-200 shadow-md hover:shadow-lg hover:scale-105"
            >
              Get Your Free Audit
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-20 bg-gradient-to-br from-gray-900 via-gray-900 to-gray-800 text-white overflow-hidden">
    <!-- Decorative gradient overlay -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
    </div>

    <div class="relative container text-center">
      <h2 class="!text-white text-3xl md:text-5xl font-bold mb-6">
        Ready to Improve Your SEO?
      </h2>
      <p class="!text-gray-300 text-xl mb-10 max-w-3xl mx-auto leading-relaxed">
        Get personalized SEO recommendations and a comprehensive audit of your website to start driving real results.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-3 px-8 py-4 bg-accent text-white font-semibold rounded-xl hover:bg-accent-dark transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
      >
        <span>Get Your Free SEO Audit</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
</PageLayout>
