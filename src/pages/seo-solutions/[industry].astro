---
import Layout from '../../layouts/Layout.astro';
import { seoIndustries, seoServices } from '../../data/seo-data';

export async function getStaticPaths() {
  return seoIndustries.map((industry: any) => ({
    params: { industry: industry.slug },
    props: { industry }
  }));
}

const { industry } = Astro.props;

// Generate dynamic meta tags
const title = `${industry.name} SEO Solutions | Expert Strategies | Outcome Digital Marketing`;
const description = `Specialized SEO solutions for ${industry.name.toLowerCase()}. ${industry.description}. Proven strategies with ${industry.benchmarkData?.averageROI || '400%'} average ROI.`;
const canonicalUrl = `https://outcomarketing.co.uk/seo-solutions/${industry.slug}`;

// Generate structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": `${industry.name} SEO Solutions`,
  "description": description,
  "provider": {
    "@type": "Organization",
    "name": "Outcome Digital Marketing Ltd",
    "url": "https://outcomarketing.co.uk"
  },
  "serviceType": "SEO Consulting",
  "industry": industry.name,
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "SEO Services",
    "itemListElement": industry.relevantServices.map((service: any) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service
      }
    }))
  }
};
---

<Layout title={title} description={description} url={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <main class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-blue-600 hover:text-blue-800">Home</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li><a href="/services" class="text-blue-600 hover:text-blue-800">Services</a></li>
        <li><span class="text-gray-400">/</span></li>
        <li class="text-gray-600">{industry.name}</li>
      </ol>
    </nav>

    <!-- Hero Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-green-600 to-blue-600 text-white rounded-lg p-8">
        <h1 class="text-4xl font-bold mb-4">{industry.name} SEO Solutions</h1>
        <p class="text-xl mb-6">{industry.description} with proven results</p>
        <div class="grid md:grid-cols-3 gap-4 mb-6">
          <div class="bg-white/20 rounded-lg p-4">
            <h3 class="font-semibold mb-2">Average ROI</h3>
            <p class="text-2xl font-bold">{industry.benchmarkData?.averageROI || '400%'}</p>
          </div>
          <div class="bg-white/20 rounded-lg p-4">
            <h3 class="font-semibold mb-2">Traffic Growth</h3>
            <p class="text-2xl font-bold">{industry.benchmarkData?.averageTrafficGrowth || '200%'}</p>
          </div>
          <div class="bg-white/20 rounded-lg p-4">
            <h3 class="font-semibold mb-2">Conversion Rate</h3>
            <p class="text-2xl font-bold">{industry.benchmarkData?.averageConversionRate || '5%'}</p>
          </div>
        </div>
        <a href="/contact" class="bg-white text-green-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors inline-block">
          Get Industry-Specific Strategy
        </a>
      </div>
    </section>

    <!-- Industry Overview -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Understanding {industry.name} SEO Challenges</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold mb-4">Industry Description</h3>
          <p class="text-gray-700 mb-6">{industry.description}</p>
          
          <h3 class="text-xl font-semibold mb-4">Key Challenges</h3>
          <div class="space-y-3">
            {industry.challenges.map((challenge: string) => (
              <div class="flex items-start">
                <svg class="w-6 h-6 text-red-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">{challenge}</span>
              </div>
            ))}
          </div>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-4">Target Keywords</h3>
          <div class="bg-blue-50 rounded-lg p-6 mb-6">
            <ul class="space-y-2">
              {industry.keywords.map((keyword: string) => (
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">{keyword}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <h3 class="text-xl font-semibold mb-4">Success Factors</h3>
          <div class="space-y-3">
            {industry.successFactors.map((factor: string) => (
              <div class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">{factor}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Tailored Strategies -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Tailored {industry.name} SEO Strategies</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {industry.strategies.map((strategy: string, index: number) => (
          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <div class="flex items-start mb-4">
              <div class="bg-blue-100 rounded-full p-2 mr-4">
                <span class="text-blue-600 font-bold">{index + 1}</span>
              </div>
              <div>
                <h3 class="text-lg font-semibold mb-2">{strategy}</h3>
                <p class="text-gray-700">Our approach to {strategy.toLowerCase()} for {industry.name.toLowerCase()} businesses focuses on delivering measurable results and sustainable growth.</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Benchmark Data -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">{industry.name} Performance Benchmarks</h2>
      <div class="bg-gray-50 rounded-lg p-6">
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="bg-blue-100 rounded-lg p-6 mb-4">
              <p class="text-3xl font-bold text-blue-600">{industry.benchmarkData?.averageConversionRate || '5%'}</p>
              <p class="text-gray-600">Average Conversion Rate</p>
            </div>
            <p class="text-gray-700">Typical conversion rate for {industry.name.toLowerCase()} websites with proper SEO optimization</p>
          </div>
          <div class="text-center">
            <div class="bg-green-100 rounded-lg p-6 mb-4">
              <p class="text-3xl font-bold text-green-600">{industry.benchmarkData?.averageTrafficGrowth || '200%'}</p>
              <p class="text-gray-600">Annual Traffic Growth</p>
            </div>
            <p class="text-gray-700">Expected organic traffic increase for {industry.name.toLowerCase()} businesses</p>
          </div>
          <div class="text-center">
            <div class="bg-purple-100 rounded-lg p-6 mb-4">
              <p class="text-3xl font-bold text-purple-600">{industry.benchmarkData?.averageROI || '400%'}</p>
              <p class="text-gray-600">Average ROI</p>
            </div>
            <p class="text-gray-700">Typical return on investment for {industry.name.toLowerCase()} SEO campaigns</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Case Studies -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">{industry.name} Success Stories</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white border rounded-lg p-6 shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Leading {industry.name} Company</h3>
          <div class="mb-4">
            <p class="text-gray-700 mb-2">A prominent {industry.name.toLowerCase()} business partnered with us to improve their online visibility and lead generation.</p>
          </div>
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div class="text-center">
              <p class="text-2xl font-bold text-blue-600">350%</p>
              <p class="text-gray-600 text-sm">Traffic Increase</p>
            </div>
            <div class="text-center">
              <p class="text-2xl font-bold text-green-600">450%</p>
              <p class="text-gray-600 text-sm">ROI</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm">Timeline: 6 months</p>
        </div>
        <div class="bg-white border rounded-lg p-6 shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Growing {industry.name} Startup</h3>
          <div class="mb-4">
            <p class="text-gray-700 mb-2">We helped a {industry.name.toLowerCase()} startup establish their online presence and compete with established players.</p>
          </div>
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div class="text-center">
              <p class="text-2xl font-bold text-blue-600">280%</p>
              <p class="text-gray-600 text-sm">Traffic Increase</p>
            </div>
            <div class="text-center">
              <p class="text-2xl font-bold text-green-600">320%</p>
              <p class="text-gray-600 text-sm">ROI</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm">Timeline: 4 months</p>
        </div>
      </div>
    </section>

    <!-- Relevant Services -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Recommended SEO Services for {industry.name}</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoServices.filter((service: any) => industry.relevantServices.includes(service.name)).map((service: any) => (
          <div class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-2">{service.name}</h3>
            <p class="text-gray-700 mb-4">{service.description}</p>
            <div class="text-sm text-gray-600 mb-4">
              <p>Price: {service.price}</p>
              <p>Duration: {service.duration}</p>
            </div>
            <a href={`/contact?service=${service.slug}&industry=${industry.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
              Learn more →
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Why Choose Outcome Digital Marketing for {industry.name} SEO</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="bg-green-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Industry Expertise</h3>
          <p class="text-gray-700">Deep understanding of {industry.name} market dynamics and customer behavior</p>
        </div>
        <div class="text-center">
          <div class="bg-blue-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 1 1 0 000 2H6a2 2 0 100 4h2a2 2 0 100 4h2a1 1 0 100 2 2 2 0 01-2 2H6a2 2 0 01-2-2V5z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Proven Results</h3>
          <p class="text-gray-700">Track record of delivering exceptional results for {industry.name.toLowerCase()} businesses</p>
        </div>
        <div class="text-center">
          <div class="bg-purple-100 rounded-full p-4 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.293a1 1 0 00-1.414 0L10 10.586 8.707 9.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 11.414l1.293 1.293a1 1 0 001.414 0l4-4a1 1 0 000-1.414z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Custom Solutions</h3>
          <p class="text-gray-700">Tailored strategies specifically designed for {industry.name.toLowerCase()} success</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="mb-12">
      <div class="bg-gradient-to-r from-green-600 to-blue-600 text-white rounded-lg p-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Dominate the {industry.name} Market?</h2>
        <p class="text-xl mb-6">Get expert SEO strategies specifically designed for {industry.name.toLowerCase()} businesses</p>
        <div class="flex justify-center space-x-4">
          <a href="/contact" class="bg-white text-green-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            Get Free Strategy Session
          </a>
          <a href="/services" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-green-600 transition-colors">
            View All Services
          </a>
        </div>
      </div>
    </section>

    <!-- Related Industries -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Related Industries</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {seoIndustries.filter((i: any) => i.slug !== industry.slug).slice(0, 3).map((relatedIndustry: any) => (
          <div class="bg-white border rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-2">{relatedIndustry.name}</h3>
            <p class="text-gray-700 mb-4">{relatedIndustry.description}</p>
            <a href={`/seo-solutions/${relatedIndustry.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
              Explore {relatedIndustry.name} →
            </a>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>